<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Book</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        input, button {
            padding: 10px;
            font-size: 16px;
        }
        .contact-card {
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }
        .contact-card img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 15px;
        }
        .error {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>
<body>
<h1>Contact Book</h1>
<form action="/yellowPage/find" method="POST">
    <input
            type="text"
            name="query"
            value="<%= query %>"
            placeholder="Search by name, age, or phone number"
            style="width: 80%;"
    />
    <button type="submit">Search</button>
</form>

<% if (error) { %>
    <p class="error"><%= error %></p>
<% } %>

<% if (contacts.length > 0) { %>
    <% contacts.forEach(contact => { %>
        <div class="contact-card">
            <img src="<%= contact.picture %>" alt="<%= contact.name %>" />
            <div>
                <h2><%= contact.name %></h2>
                <p>Age: <%= new Date().getFullYear() - new Date(contact.birthday).getFullYear() %></p>
                <p>Phone: <%= contact.phone_number %></p>
                <p>Address: <%= contact.address %></p>
            </div>
        </div>
    <% }) %>
<% } %>
</body>
</html>
